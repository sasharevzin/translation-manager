<%= form_for(@source) do |f| %>
  <% if @source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@source.errors.count, "error") %> prohibited this source translation from being saved:</h2>
      <ul>
      <% @source.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :language %><br>
    <%= f.select :language , Source.supported_languages ,{} ,{ class: "form-control languageSelect" }%>
 </div>

 <div class="field">
   <%= f.label :context %> <br>
   <%= f.text_field :context, class: 'form-control'%>
 </div>

<%= tinymce %>
 <div class="field">
   <%= f.label :text %><br>
   <%= link_to 'enable editor','#', class: 'enableEditor'%> | <%= link_to 'disable editor','#', class: 'removeEditor'%><br />
    <%= f.text_area :text,rows: 3, class: 'form-control' %>
 </div>


 <h2>Translations</h2>
<table id='translationFields' class='table table-bordered'>
  <thead>
    <tr>
      <th>&nbsp</th>
      <th>Language</th>
      <th>Text</th>
    </tr>
  </thead>
  <tbody>
  <% num ||= 1 %>
 <%= f.fields_for :translations do |translation| %>
   <tr data-translation-number="<%=num%>">
      <td>
         <a class='remove'>remove</a>
       </td>
      <td>
        <%= translation.select :language , Source.supported_languages,{} ,{ :class =>"form-control languageSelect" } %>
      </td>

      <td>
        <%= translation.text_area :text, rows: 3, class: 'form-control' %>
       </td>
     </tr>
     <% num +=1 %>
 <% end %>
  </tbody>
</table>
  <div class="actions">
    <a class='addMore'>add more</a>
    <%= f.submit %>
  </div>
<% end %>
